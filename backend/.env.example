# Server Configuration
PORT=5000
NODE_ENV=production

# MongoDB Connection String - Use a secure connection with authentication
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/dbname?retryWrites=true&w=majority

# JWT Configuration - Use a strong, unique secret and shorter expiry for production
JWT_SECRET=create_a_strong_random_string_at_least_32_chars_long
JWT_EXPIRY=1d

# Frontend URL (CORS allowed origin in production)
FRONTEND_URL=https://your-production-frontend.com

# Owner Setup (for initial admin account creation)
OWNER_SETUP_CODE=change_this_to_a_unique_secure_code

# Security Settings
# Set to 'true' to enforce HTTPS (recommended in production)
ENFORCE_HTTPS=true

# Rate Limiting
# Maximum requests per window for general API endpoints
RATE_LIMIT_MAX=100
# Time window in minutes for rate limiting
RATE_LIMIT_WINDOW_MINUTES=15
# Maximum login attempts
AUTH_RATE_LIMIT_MAX=10
# Time window in minutes for login rate limiting
AUTH_RATE_LIMIT_WINDOW_MINUTES=60

# Socket.io Settings
SOCKET_CORS_ORIGIN=https://your-production-frontend.com
